{
  "manifest_version": 2,
  "name": "Youtube Timed Comments",
  "version": "0.1.0",
  "version_name": "Development 0.1.0",

  "description": "Show comments, that specify time in a corner of a Youtube video.",

  "author": "Jesse Sivonen",
  "content_scripts": [
      {
          "matches": ["https://www.youtube.com/*"],
          "js": ["player.js"],
          "css": ["player.css"]
      }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'",
  "offline_enabled": false,
  "options_page": "options.html",
  "options_ui": {
    "chrome_style": true,
    "page": "options.html"
  },
  "permissions": ["tabs", "identity", "storage"],
  "oauth2": {
    "client_id": "452817651860-0tqdof7lahn12qu37f0u8o4pviof06c2.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/youtube.force-ssl"]
  }
}